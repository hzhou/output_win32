#-- pay attention to the naming convention
subcode: main_on_WM_PAINT
    &call on_paint
        $call @init_font
        $call background, RGB(255,255,255)
        &call with_gdi, hfont_a
            TextOut(hdc, 10, 10, "Hello World!", 12)

subcode: init_font
    $global hfont_a
    $if !hfont_a
        $call create_font, hfont_a, "Times New Roman", 100

